<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.nau_yyf</groupId>
  <artifactId>Tank2025</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.nau_yyf.TankBattleApplication</mainClass>
          <launcher>tanklauncher</launcher>
          <jlinkImageName>tankbattle</jlinkImageName>
          <jlinkZipName>tankbattlezip</jlinkZipName>
          <noManPages>true</noManPages>
          <stripDebug>true</stripDebug>
          <noHeaderFiles>true</noHeaderFiles>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.nau_yyf.TankBattleApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.4.0</version>
        <executions>
          <execution>
            <id>mac</id>
            <phase>package</phase>
            <goals>
              <goal>jpackage</goal>
            </goals>
            <configuration>
              <platformPackageType>dmg</platformPackageType>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <name>Tank2025</name>
          <appVersion>1.0.0</appVersion>
          <vendor>NAU-YYF</vendor>
          <destination>target/dist</destination>
          <mainClass>com.nau_yyf.TankBattleApplication</mainClass>
          <javaOptions>
            <option>-Dfile.encoding=UTF-8</option>
            <option>-Dapple.awt.application.name=Tank2025</option>
            <option>-Dapple.laf.useScreenMenuBar=true</option>
          </javaOptions>
          <icon>src/main/resources/images/logo/tank_logo.icns</icon>
          <winIcon>src/main/resources/images/ui/app_icon.ico</winIcon>
          <linuxIcon>src/main/resources/images/ui/app_icon.png</linuxIcon>
          <winDirChooser>true</winDirChooser>
          <winMenu>true</winMenu>
          <winMenuGroup>Tank 2025</winMenuGroup>
          <winShortcut>true</winShortcut>
          <macPackageIdentifier>com.nau-yyf.tank2025</macPackageIdentifier>
          <macPackageName>Tank2025</macPackageName>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>21</maven.compiler.target>
    <maven.compiler.source>21</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>17.0.2</javafx.version>
  </properties>
</project>
